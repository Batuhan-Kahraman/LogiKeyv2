@model EntityLayer.Concrate.AkaryakitFatura

@{
    ViewData["Title"] = "Ödeme Yapın";
}
<div class="col-lg-10 col-xxl-11">
    <h2 class="mb-3 lh-sm">Ödeme Yapın</h2>
    
    <form  method="post">
        <div class="card shadow-none border my-4" data-component-card="data-component-card">
            <div class="card-header p-4 border-bottom bg-body">
                <div class="row g-3 justify-content-between align-items-center">
                    <div class="col-md-8">
                        <input type="hidden" asp-for="ID" id="ID" />
                        <input class="form-control" id="Odeme" type="number" asp-for="Odeme" placeholder="Ödeme Tutarını Giriniz" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Kaydet</button>  
                    </div>

                </div>
            </div>

        </div>
    </form>
   

</div>