@using BusinessLayer.Concrate
@using EntityLayer.Concrate;
@model List<Cari>

@{
    ViewData["Title"] = "Cariler";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Cariler</h2>
    <a asp-controller="Cari" asp-action="Ekle">Cari Ekle</a>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Cari Adı</th>
                <th>TC NO / Vergi No</th>
                <th>İl</th>
                <th>İlçe</th>
                <th>Adresi</th>
                <th>Yetkili</th>
                <th>Telefon</th>
                <th>E-posta</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cari_Unvan</td>
                    <td>@item.Cari_TCNO_VergiNo</td>
                    <td>@Helper.IlAdi(item.Cari_IL_ID.ToString())</td>
                    <td>@Helper.IlceAdi(item.Cari_ILCE_ID.ToString())</td>
                    <td>@item.Cari_Adres</td>
                    <td>@item.Cari_YetkiliAdi @item.Cari_YetkiliSoyadi</td>
                    <td>@item.Cari_CepNo</td>
                    <td>@item.Cari_FirmaEposta</td>
                    <td>

                        @if (item.Firma_ID != -2 || item.Firma_ID == ViewBag.FirmaID)
                        {
                            <a asp-controller="Cari" asp-action="CariHareket" asp-route-CariID="@item.Cari_ID" title="Cari Hareketleri">
                                <span class="text-body fs-5" data-feather="repeat"></span>
                            </a>
                            <a asp-controller="Cari" asp-action="Duzenle" asp-route-ID="@item.Cari_ID">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.Cari_ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Cari Adı</th>
                <th>TC NO / Vergi No</th>
                <th>İl</th>
                <th>İlçe</th>
                <th>Adresi</th>
                <th>Yetkili</th>
                <th>Telefon</th>
                <th>E-posta</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </tfoot>
    </table>



    <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                </div>
                <form action="Cari/Sil" method="post">
                    <div class="modal-body">

                        <p class="text-body-tertiary lh-lg mb-0">
                            <input type="hidden" name="ID" id="silID" value="" />
                            Bu öğeyi silmek istediğinizden emin misiniz?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="submit">Sil</button>
                        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>




</div>
