@using BusinessLayer.Concrate
@using EntityLayer.Concrate;
@model List<CariHareket>

@{
    ViewData["Title"] = "Cari Ödeme Hareketleri";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Cari Ödeme Hareketleri</h2>
    <a asp-controller="CariOdemeHareketleri" asp-action="Ekle">Cari Ödeme Hareketi Ekle</a>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }


    <div class="m-4">
        <select class="form-control" name="CariID" id="CariID" onchange="CariSec()">
        </select>
        <div id="borcAlacak" class="m-4">@Html.Raw(Helper.CariBorcAlacak(ViewBag.CariID))</div>
    </div>


    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Ödeme Tarihi</th>
                <th>Ödeme Yöntemi</th>
                <th>Cari Adı</th>
                <th>Fatura Tutarı</th>
                <th>Ödeme Tutarı</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                double? tutar = 0, odemeTutar = 0;
                string yontem = "", tarih="";
                if (item.AkaryakitFaturaTutar != 0 && item.AkaryakitFaturaTutar != null)
                    tutar = item.AkaryakitFaturaTutar;
                else if (item.NormalFaturaTutar != 0 && item.NormalFaturaTutar != null)
                    tutar = item.NormalFaturaTutar;
                if (item.KrediTutar != 0 && item.KrediTutar != null)
                    {
                        odemeTutar = item.KrediTutar;
                    yontem = "Kredi Kartı";
                    tarih = item.KrediTarih.ToString();
                }
                else if (item.CekTutar != 0 && item.CekTutar != null)
                    {
                    odemeTutar = item.CekTutar;
                    yontem = "Çek";
                    tarih = item.CekVadeTarihi.ToString();
                    }
                else if (item.SenetTutar != 0 && item.SenetTutar != null)
                    {
                    odemeTutar = item.SenetTutar;
                    yontem = "Senet";
                    tarih = item.SenetTarihi.ToString();
                    }
                else if (item.HavaleTutar != 0 && item.HavaleTutar != null)
                    {
                    odemeTutar = item.HavaleTutar;
                    yontem = "Havale";
                    tarih = item.HavaleTarih.ToString();
                    }
                <tr>
                    <td>@tarih</td>
                    <td>@yontem</td>
                    <td>@Helper.CariUnvan(item.CariID)</td>
                    <td>@tutar</td>
                    <td>@odemeTutar</td>
                    <td>
                        @if (item.AkaryakitFaturaID != 0 && item.AkaryakitFaturaID != null)
                        {
                            <a asp-controller="AkaryakitTasima" asp-action="FaturaGoster" asp-route-ID="@item.AkaryakitFaturaID">
                                <span class="text-body fs-5" data-feather="file"></span>
                            </a>
                        }
                        else if (item.NormalFaturaID != 0 && item.NormalFaturaID != null)
                        {
                            <a asp-controller="NormalTasima" asp-action="FaturaGoster" asp-route-ID="@item.NormalFaturaID">
                                <span class="text-body fs-5" data-feather="file"></span>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="CariOdemeHareketleri" asp-action="Duzenle" asp-route-ID="@item.ID">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Cari Adı</th>
                <th>Fatura Tutarı</th>
                <th>Ödeme Tutarı</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </tfoot>
    </table>


    <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                </div>
                <form action="CariOdemeHareketleri/Sil" method="post">
                    <div class="modal-body">

                        <p class="text-body-tertiary lh-lg mb-0">
                            <input type="hidden" name="ID" id="silID" value="" />
                            Bu öğeyi silmek istediğinizden emin misiniz?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="submit">Sil</button>
                        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>


@section Scripts {

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>

        function CariListe() {
            //araç tür listele
            $.ajax({
                url: '../Ajax/CariListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#CariID').empty();
                    $('#CariID').append($('<option>', {
                        value: "0", // Verinin değer özelliği
                        text: "Tüm Cariler" // Verinin görünen metni

                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#CariID').append($('<option>', {
                            value: item.cari_ID, // Verinin değer özelliği
                            text: item.cari_Unvan, // Verinin değer özelliği
                            // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
            var url = window.location.href;

            // URL'den parametreleri ayıkla
            var urlParams = new URLSearchParams(url.split('?')[1]);

            // CariID parametresinin değerini al
            var cariID = urlParams.get('CariID');
            if (!cariID) {
                cariID = 0;
            }
            console.log(cariID);
            $("#CariID").val(cariID);
            document.getElementById("CariID").value = cariID;

        }
        CariListe();
        function CariSec() {
            var CariID = document.getElementById("CariID").value;
            window.location.href = "CariOdemeHareketleri?CariID=" + CariID;
        }

    </script>
}