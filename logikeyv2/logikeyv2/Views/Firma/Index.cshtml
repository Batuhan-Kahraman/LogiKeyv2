@using EntityLayer.Concrate;
@model List<Firma>

@{
    ViewData["Title"] = "Firmalar";
}
<div class="col-lg-10 col-xxl-11">
    <h2 class="mb-3 lh-sm">Firmalar</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }
   
    <div class="p-4 code-to-copy">
        <div id="tableExample3" data-list='{"valueNames":["name"],"page":20,"pagination":true}'>
           <div>
                <a asp-controller="Firma" asp-action="Ekle">Firma Ekle</a>
           </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm fs-9 mb-0">
                    <thead>
                        <tr>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Firma Adı</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">TC NO / Vergi No</th>

                            <th class="sort border-top border-translucent ps-3" data-sort="name">Adresi</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Telefon No</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Yetkili Adı</th>
                            <th class="sort border-top">
                                İşlemler
                            </th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Firma_Unvan</td>
                                <td>@item.Firma_TCNO_VKNO</td>
                                <td>@item.Firma_Adres</td>
                                <td>@item.Firma_CepTel</td>
                                <td>@item.Firma_YetkiliAdi @item.Firma_YetkiliSoyadi</td>
                                <td>
                                    <a href="#" onclick="Duzenle(@item.Firma_ID, '@item.Firma_Unvan')">
                                        <span class="text-body fs-5" data-feather="edit"></span>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.Firma_ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                            </div>
                            <form action="Marka/Sil" method="post">
                                <div class="modal-body">

                                    <p class="text-body-tertiary lh-lg mb-0">
                                        <input type="hidden" name="ID" id="silID" value="" />
                                        Bu öğeyi silmek istediğinizden emin misiniz?
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger" type="submit">Sil</button>
                                    <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
            <div class="d-flex justify-content-between mt-3">
                <span class="d-none d-sm-inline-block" data-list-info="data-list-info"></span>
                <div class="d-flex">
                    <button class="page-link" data-list-pagination="prev"><span class="fas fa-chevron-left"></span></button>
                    <ul class="mb-0 pagination"></ul><button class="page-link pe-0" data-list-pagination="next"><span class="fas fa-chevron-right"></span></button>
                </div>
            </div>
        </div>
    </div>

</div>
