@using EntityLayer.Concrate;
@model List<OkulGuzergahModel>

@{
    ViewData["Title"] = "Guzergah";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Okul Güzergahları</h2>
    <a asp-controller="Guzergah" asp-action="GuzergahEkle">Güzergah Ekle</a>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }


    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <t>
                    Güzergah Adı</th>
                    <th>Araç Plakası</th>
                    <th>Şöför Adı</th>
                    <th>Hostes Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>
                        İşlemler
                    </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Guzergah.Guzergah_Adi</td>
                    <td>@item.Arac.Plaka</td>
                    <td>@item.Sofor.Kullanici_Isim @item.Sofor.Kullanici_Soyisim</td>
                    <td>@item.Hostes.Kullanici_Isim @item.Hostes.Kullanici_Soyisim</td>
                    <td>@item.Guzergah.OlusturmaTarihi</td>

                    <td>
                        @if (item.Guzergah.FirmaID != -2 || item.Guzergah.FirmaID == ViewBag.FirmaID)
                        {
                            <a asp-controller="Guzergah" asp-action="GuzergahDuzenle" asp-route-ID="@item.Guzergah.Guzergah_ID">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.Guzergah.Guzergah_ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <t>
                    Güzergah Adı</th>
                    <th>Araç Plakası</th>
                    <th>Şöför Adı</th>
                    <th>Hostes Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>
                        İşlemler
                    </th>

            </tr>
        </tfoot>
    </table>
    <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                </div>
                <form action="Guzergah/Sil" method="post">
                    <div class="modal-body">

                        <p class="text-body-tertiary lh-lg mb-0">
                            <input type="hidden" name="ID" id="silID" value="" />
                            Bu öğeyi silmek istediğinizden emin misiniz?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="submit">Sil</button>
                        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


