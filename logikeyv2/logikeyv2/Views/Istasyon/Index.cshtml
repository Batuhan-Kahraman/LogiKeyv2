@using BusinessLayer.Concrate
@using EntityLayer.Concrate;
@model List<Istasyon>

@{
    ViewData["Title"] = "İstasyon";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">İstasyon</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }
    <form id="form" action="Istasyon/Ekle" method="post">
        <div class="card shadow-none border my-4" data-component-card="data-component-card">
            <div class="card-header p-4 border-bottom bg-body">
                <div class="row g-3 justify-content-between align-items-center">
                    <div class="col-md-6 d-flex">
                        <input type="hidden" name="ID" id="ID" value="" />
                        <span style="color:red;">*</span>
                        <input class="form-control" id="Kod" type="text" name="Kod" placeholder="Kod Giriniz" required />
                    </div>
                    <div class="col-md-6 d-flex">
                        <span style="color:red;">*</span>
                        <input class="form-control" id="Adi" type="text" name="Adi" placeholder="Ad Giriniz" required />
                    </div>

                    <div class="col-md-6 d-flex">
                        <span style="color:red;">*</span>
                        <select name="TedarikciID" id="TedarikciID" class="form-control" required>
                            <option value="0">Tedarikçi Seçiniz</option>
                        </select>
                    </div>

                    <div class="col-md-6 d-flex">

                        <span style="color:red;">*</span>
                        <select name="BolgeID" id="BolgeID" class="form-control" required>
                            <option value="0">Bölge Seçiniz</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex">
                        <span style="color:red;">*</span>
                        <select name="IlID" id="IlID" class="form-control" onchange="IlDegistir(this.value)"
                                required>
                            <option value="0">İl Seçiniz</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex">
                        <span style="color:red;">*</span>
                        <select name="IlceID" id="IlceID" class="form-control" required>
                            <option value="0">İlçe Seçiniz</option>
                        </select>
                    </div>


                    <div class="col-md-9">
                        <input class="form-control" id="Aciklama" type="text" name="Aciklama" placeholder="Açıklama Giriniz" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Kaydet</button>  <button type="button" onclick="Temizle()" class="btn btn-subtle-warning me-1 mb-1">Temizle</button>
                    </div>

                </div>
            </div>

        </div>
    </form>


    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th>Tedarikçi</th>
                <th>Bolge</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Kod</td>
                    <td>@item.Adi</td>
                    <td>@Helper.CariUnvan(item.TedarikciID)</td>
                    <td>@item.BolgeID.ToString()</td>
                    <td>
                        @if (item.FirmaID != -2 || item.FirmaID == ViewBag.FirmaID)
                        {
                            <a href="#" onclick="Duzenle(@item.ID, '@item.Kod','@item.Adi','@item.Aciklama',@item.TedarikciID,@item.BolgeID,@item.IlID,@item.IlceID)">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th>Tedarikçi</th>
                <th>Bolge</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </tfoot>
    </table>


    <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                </div>
                <form action="Istasyon/Sil" method="post">
                    <div class="modal-body">

                        <p class="text-body-tertiary lh-lg mb-0">
                            <input type="hidden" name="ID" id="silID" value="" />
                            Bu öğeyi silmek istediğinizden emin misiniz?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="submit">Sil</button>
                        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>


@section Scripts {


    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>

        $(document).ready(function () {
            $('select').select2();
        });
    </script>
    <script>
        //tedarikçi listele
        function TedarikciCariListe() {

            $.ajax({
                url: '../Ajax/TedarikciCariListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#TedarikciID').empty();
                    $('#TedarikciID').append($('<option>', {
                        value: 0, // Verinin değer özelliği
                        text: "Tedarikçi Seçiniz" // Verinin görünen metni
                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#TedarikciID').append($('<option>', {
                            value: item.cari_ID, // Verinin değer özelliği
                            text: item.cari_Unvan // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
        }
        //il listele
        function IlListele() {

            $.ajax({
                url: '../Ajax/IlListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#IlID').empty();
                    $('#IlID').append($('<option>', {
                        value: 0, // Verinin değer özelliği
                        text: "İl Seçiniz" // Verinin görünen metni
                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#IlID').append($('<option>', {
                            value: item.iL_KODU, // Verinin değer özelliği
                            text: item.il // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
        }
        function IlDegistir(IlKodu) {

            $.ajax({
                url: '../Ajax/IlceListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                data: { IlKodu: IlKodu },
                dataType: 'json',
                success: function (data) {
                    $('#IlceID').empty();
                    $('#IlceID').append($('<option>', {
                        value: 0, // Verinin değer özelliği
                        text: "İlçe Seçiniz" // Verinin görünen metni
                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#IlceID').append($('<option>', {
                            value: item.ilcE_KODU, // Verinin değer özelliği
                            text: item.ilce // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
        }
        IlListele();
        TedarikciCariListe();
    </script>

    <script>
        function Duzenle(ID, Kod, Adi, Aciklama, TedarikciID, BolgeID, IlID, IlceID) {
            debugger;
            document.getElementById("Kod").value = Kod;
            document.getElementById("Adi").value = Adi;
            document.getElementById("Aciklama").value = Aciklama;
            document.getElementById("TedarikciID").value = TedarikciID;
            document.getElementById("BolgeID").value = BolgeID;
            document.getElementById("IlID").value = IlID;
            IlDegistir(IlID);
            document.getElementById("IlceID").value = IlceID;
            document.getElementById("ID").value = ID;
            document.getElementById("form").setAttribute("action", "Istasyon/Duzenle");

        }

        function Temizle() {
            document.getElementById("Kod").value = "";
            document.getElementById("Adi").value = "";
            document.getElementById("Aciklama").value = "";
            document.getElementById("TedarikciID").value = "";
            document.getElementById("BolgeID").value = "";
            document.getElementById("IlID").value = "";
            document.getElementById("IlceID").value = "";
            document.getElementById("ID").value = "";
            document.getElementById("form").setAttribute("action", "Istasyon/Ekle");
        }
    </script>
}