@using BusinessLayer.Concrate
@using EntityLayer.Concrate;
@model List<Stok>

@{
    ViewData["Title"] = "Stok";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Stok</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <form action="Stok/StokKategoriEkle" method="post">
        <div class="card shadow-none border my-4" data-component-card="data-component-card">
            <div class="card-header p-4 border-bottom bg-body">
                <div class="row g-3 justify-content-between align-items-center">
                    <div class="col-md-6">
                        <input class="form-control" id="StokKategoriAdi" type="text" name="StokKategoriAdi" placeholder="Stok Kategori Adını Giriniz" required />
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Kaydet</button>  <button type="button" onclick="Temizle()" class="btn btn-subtle-warning me-1 mb-1">Temizle</button>
                    </div>

                </div>
            </div>

        </div>
    </form>

    <form id="form" action="Stok/Ekle" method="post">
        <div class="card shadow-none border my-4" data-component-card="data-component-card">
            <div class="card-header p-4 border-bottom bg-body">
                <div class="row g-3 justify-content-between align-items-center">
                    <div class="col-md-4 d-flex">
                        <span style="color:red;">*</span>
                        <select name="StokKategoriID" id="StokKategoriID" class="form-control" required>
                            <option value="" disabled selected>Stok Kategorisi Seçiniz</option>
                            @foreach (var item in ViewBag.StokKategori)
                            {
                                <option value="@item.ID">@item.StokKategoriAdi</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 d-flex">
                        <input type="hidden" name="ID" id="ID" value="" />
                        <span style="color:red;">*</span>
                        <input class="form-control" id="StokKodu" type="text" name="StokKodu" placeholder="Stok Kodu Giriniz" required />
                    </div>
                    <div class="col-md-4 d-flex">
                        <span style="color:red;">*</span>
                        <input class="form-control" id="StokAdi" type="text" name="StokAdi" placeholder="Stok Adı Giriniz" required />
                    </div>

                    <div class="col-md-4 d-flex">
                        <span style="color:red;">*</span>
                        <input class="form-control" id="Adet" type="number" name="Adet" placeholder="Adet Giriniz" required />
                    </div>

                    <div class="col-md-4 d-flex">
                        <span style="color:red;">*</span>
                        <input class="form-control" id="BirimFiyat" type="number" name="BirimFiyat" placeholder="Birim Fiyatı Giriniz" required />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" id="Tarih" type="datetime" name="Tarih" placeholder="Tarih Giriniz" />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" id="FaturaNo" type="text" name="FaturaNo" placeholder="Fatura No Giriniz" />
                    </div>
                    <div class="col-md-4">
                        <select class="form-control" id="TedarikciID" name="TedarikciID">
                            <opion disabled selected>Tedarikçi Seçiniz</opion>
                        </select>
                    </div>
                    <div class="col-md-4">

                        <select class="form-control" id="GiderTipiID" name="GiderTipiID">
                            <opion disabled selected>Gider Tipi Seçiniz</opion>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" id="Aciklama" type="text" name="Aciklama" placeholder="Açıklama Giriniz" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Kaydet</button>  <button type="button" onclick="Temizle()" class="btn btn-subtle-warning me-1 mb-1">Temizle</button>
                    </div>

                </div>
            </div>

        </div>
    </form>
    <div class="p-4 code-to-copy">
        <div id="tableExample3" data-list='{"valueNames":["tarih","kategori,ad,kod,adet,birimFiyat","giderTip","tedarikci","tedarikci","faturaNo"],"page":20,"pagination":true}'>
            <div class="search-box mb-3 mx-auto">
                <form class="position-relative" data-bs-toggle="search" data-bs-display="static">
                    <input class="form-control search-input search form-control-sm" type="search" placeholder="Ara" aria-label="Ara" />
                    <span class="fas fa-search search-box-icon"></span>
                </form>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm fs-9 mb-0">
                    <thead>
                        <tr>
                            <th class="sort border-top border-translucent ps-3" data-sort="tarih">Tarih</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="kategori">Stok Kategorisi</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="kod">Stok Kodu</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="ad">Stok Adı</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="adet">Adet</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="birimFiyat">Birim Fiyat</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="giderTip">Gider Tipi</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="tedarikci">Tedarikçi</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="faturaNo">Fatura No</th>
                            <th class="sort border-top">
                                İşlemler
                            </th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tarih</td>
                                <td>@Helper.StokKategori(item.StokKategoriID)</td>
                                <td>@item.StokKodu</td>
                                <td>@item.StokAdi</td>
                                <td>@item.Adet</td>
                                <td>@item.BirimFiyat</td>
                                <td>@item.GiderTipiID</td>
                                <td>@item.TedarikciID</td>
                                <td>@item.FaturaNo</td>
                                <td>
                                    @if (item.FirmaID != -2 || item.FirmaID == ViewBag.FirmaID)
                                    {
                                        <a href="#" onclick="Duzenle(@item.ID, '@item.StokKodu', '@item.StokAdi',@item.Adet,@item.BirimFiyat,@item.StokKategoriID,'@item.Aciklama','@item.Tarih','@item.GiderTipiID','@item.TedarikciID','@item.FaturaNo')">
                                            <span class="text-body fs-5" data-feather="edit"></span>
                                        </a>
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                            </div>
                            <form action="Stok/Sil" method="post">
                                <div class="modal-body">

                                    <p class="text-body-tertiary lh-lg mb-0">
                                        <input type="hidden" name="ID" id="silID" value="" />
                                        Bu öğeyi silmek istediğinizden emin misiniz?
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger" type="submit">Sil</button>
                                    <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
            <div class="d-flex justify-content-between mt-3">
                <span class="d-none d-sm-inline-block" data-list-info="data-list-info"></span>
                <div class="d-flex">
                    <button class="page-link" data-list-pagination="prev"><span class="fas fa-chevron-left"></span></button>
                    <ul class="mb-0 pagination"></ul><button class="page-link pe-0" data-list-pagination="next"><span class="fas fa-chevron-right"></span></button>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        function Duzenle(ID, Kod, Ad, Adet, BirimFiyat, StokKategoriID, Aciklama, Tarih, GiderTipiID, TedarikciID, FaturaNo) {
            document.getElementById("StokKategoriID").value = StokKategoriID;
            document.getElementById("StokKodu").value = Kod;
            document.getElementById("StokAdi").value = Ad;
            document.getElementById("Adet").value = Adet;
            document.getElementById("BirimFiyat").value = BirimFiyat;
            document.getElementById("Aciklama").value = Aciklama;
            document.getElementById("Tarih").value = Tarih;
            document.getElementById("GiderTipiID").value = GiderTipiID;
            document.getElementById("TedarikciID").value = TedarikciID;
            document.getElementById("FaturaNo").value = FaturaNo;
            document.getElementById("ID").value = ID;
            document.getElementById("form").setAttribute("action", "Stok/Duzenle");

        }
        function Temizle() {
            document.getElementById("StokKodu").value = "";
            document.getElementById("StokKategoriID").value = "";
            document.getElementById("StokAdi").value = "";
            document.getElementById("Adet").value = "";
            document.getElementById("BirimFiyat").value = "";
            document.getElementById("Aciklama").value = "";
            document.getElementById("Tarih").value = "";
            document.getElementById("GiderTipiID").value = "";
            document.getElementById("TedarikciID").value = "";
            document.getElementById("FaturaNo").value = "";
            document.getElementById("ID").value = "";
            document.getElementById("form").setAttribute("action", "Stok/Ekle");
        }


        function TedarikciListe() {
            //tedarikçi listele
            $.ajax({
                url: '../Ajax/TedarikciListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#TedarikciID').empty();
                    $('#TedarikciID').append($('<option>', {
                        value: 0, // Verinin değer özelliği
                        text: "Tedarikçi Seçiniz", // Verinin görünen metni
                        disabled: true, // Option elementini devre dışı bırak
                        selected: true  // Option elementini seçili yap
                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#TedarikciID').append($('<option>', {
                            value: item.cari_ID, // Verinin değer özelliği
                            text: item.cari_Unvan // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
        }
                    
        TedarikciListe();

        function GiderTipListe() {
            //tedarikçi listele
            $.ajax({
                url: '../Ajax/GiderTipListe', // Verileri sağlayan API'nin endpoint'i
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#GiderTipiID').empty();
                    $('#GiderTipiID').append($('<option>', {
                        value: 0, // Verinin değer özelliği
                        text: "Gider Tipi Seçiniz", // Verinin görünen metni
                        disabled: true, // Option elementini devre dışı bırak
                        selected: true  // Option elementini seçili yap
                    }));
                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#GiderTipiID').append($('<option>', {
                            value: item.id, // Verinin değer özelliği
                            text: item.adi // Verinin görünen metni
                        }));
                    });
                },
                error: function (error) {
                    console.log('Hata oluştu:', error);
                }
            });
        }

        GiderTipListe();


    </script>
}