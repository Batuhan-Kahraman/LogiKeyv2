        EhliyetSinifiListe();
    </script>
    <script>
        $(document).ready(function () {
            $('#IlID').change(function () {
                var ilKodu = $(this).val();
                if (ilKodu) {
                    $.ajax({
                        type: "GET",
                        url: "/ControllerAdi/GetIlceler",
