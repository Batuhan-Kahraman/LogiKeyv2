                    // Verileri selectbox'a ekle
                    $.each(data, function (index, item) {
                        console.log(item);
                        $('#KullaniciGrup_ID').append($('<option>', {
                            value: item.kullaniciGrup_ID, // Verinin değer özelliği
                            text: item.kullaniciGrup_Adi // Verinin görünen metni
                        }));
                    });
                },
