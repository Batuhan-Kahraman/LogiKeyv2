        function validateCheckboxes() {
            var checkboxes = document.getElementsByName('FirmaModul_ID[]');
            var isChecked = false;
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].checked) {
                    isChecked = true;
                    break;
                }
            }
            if (!isChecked) {
                alert("Lütfen en az bir modül seçiniz.");
                return false;
            }
            return true;
        }
     
