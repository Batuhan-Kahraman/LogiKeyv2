                                <tr>
                                    <th class="sort border-top border-translucent ps-3" data-sort="tank">Tank</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="tedarikci">Tedarikçi</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="fatura">FaturaNo</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="yakitTip">Yakıt Tipi</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="yakitAltTip">Yakıt Alt Tipi</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="miktar">Miktar</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="fiyat">Lt Fiyat</th>
                                    <th class="sort border-top border-translucent ps-3" data-sort="km">Araç Km</th>

                                    <th class="sort border-top">
                                        İşlemler
                                    </th>

                                </tr>
                            </thead>
                            <tbody class="list">
                                @foreach (var item in ViewBag.tankaYakitEkleList)
                                {
                                    <tr>
                                        <td>@Helper.Tank(item.TankID)</td>
                                        <td>@Helper.CariUnvan(item.TedarikciID)</td>
                                        <td>@item.FaturaNo</td>
                                        <td>@Helper.YakitTipi(item.YakitTipID)</td>
                                        <td>@Helper.YakitAltTipi(item.YakitAltTipID)</td>
                                        <td>@item.Miktar</td>
                                        <td>@item.LtFiyat</td>
                                        <td>@item.AracKm</td>
                                        <td>
                                            @if (item.FirmaID != -2 || item.FirmaID == ViewBag.FirmaID)
                                            {
                                                <a asp-controller="TankYakit" asp-action="TankaYakitDuzenle" asp-route-ID="@item.ID">
                                                    <span class="text-body fs-5" data-feather="edit"></span>
                                                </a>
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('tankaYakitSilID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


