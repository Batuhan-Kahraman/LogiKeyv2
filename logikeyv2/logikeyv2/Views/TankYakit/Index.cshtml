@using BusinessLayer.Concrate

@{
    ViewData["Title"] = "İstasyon";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Tank Yakıt Listesi</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }


    <ul class="nav nav-underline fs-9" id="myTab" role="tablist">
        <li class="nav-item"><a class="nav-link active" id="tankaYakit-tab" data-bs-toggle="tab" href="#tab-home" role="tab" aria-controls="tab-home" aria-selected="true">Tanka Yakıt Ekle</a></li>
        <li class="nav-item"><a class="nav-link" id="tanktanYakitVer-tab" data-bs-toggle="tab" href="#tab-profile" role="tab" aria-controls="tab-profile" aria-selected="false">Tanktan Yakıt Ver</a></li>
        <li class="nav-item"><a class="nav-link" id="istasyondanYakit-tab" data-bs-toggle="tab" href="#tab-contact" role="tab" aria-controls="tab-contact" aria-selected="false">İstasyondan Yakıt Ver</a></li>
    </ul>
    <div class="tab-content mt-3" id="myTabContent">
        <div class="tab-pane fade show active" id="tab-home" role="tabpanel" aria-labelledby="tankaYakit-tab">

            <a asp-controller="TankYakit" asp-action="TankaYakitEkle">Tanka Yakıt Ekle</a>

            <div class="table-responsive">

                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Tank</th>
                            <th>Tedarikçi</th>
                            <th>FaturaNo</th>
                            <th>Yakıt Tipi</th>
                            <th>Yakıt Alt Tipi</th>
                            <th>Miktar</th>
                            <th>Lt Fiyat</th>
                            <th>Araç Km</th>

                            <th>
                                İşlemler
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.tankaYakitEkleList)
                        {
                            <tr>
                                <td>@Helper.Tank(item.TankID)</td>
                                <td>@Helper.CariUnvan(item.TedarikciID)</td>
                                <td>@item.FaturaNo</td>
                                <td>@Helper.YakitTipi(item.YakitTipID)</td>
                                <td>@Helper.YakitAltTipi(item.YakitAltTipID)</td>
                                <td>@item.Miktar</td>
                                <td>@item.LtFiyat</td>
                                <td>@item.AracKm</td>
                                <td>
                                    @if (item.FirmaID != -2 || item.FirmaID == ViewBag.FirmaID)
                                    {
                                        <a asp-controller="TankYakit" asp-action="TankaYakitDuzenle" asp-route-ID="@item.ID">
                                            <span class="text-body fs-5" data-feather="edit"></span>
                                        </a>
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('tankaYakitSilID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Tank</th>
                            <th>Tedarikçi</th>
                            <th>FaturaNo</th>
                            <th>Yakıt Tipi</th>
                            <th>Yakıt Alt Tipi</th>
                            <th>Miktar</th>
                            <th>Lt Fiyat</th>
                            <th>Araç Km</th>

                            <th>
                                İşlemler
                            </th>

                        </tr>
                    </tfoot>
                </table>


                <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                            </div>
                            <form action="TankYakit/TankaYakitSil" method="post">
                                <div class="modal-body">

                                    <p class="text-body-tertiary lh-lg mb-0">
                                        <input type="hidden" name="ID" id="tankaYakitSilID" value="" />
                                        Bu öğeyi silmek istediğinizden emin misiniz?
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger" type="submit">Sil</button>
                                    <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



            </div>

        </div>
        <div class="tab-pane fade" id="tab-profile" role="tabpanel" aria-labelledby="tanktanYakitVer-tab">

