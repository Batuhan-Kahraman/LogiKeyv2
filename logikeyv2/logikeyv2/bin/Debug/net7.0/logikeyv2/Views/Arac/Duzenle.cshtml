@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        //sahiplik listele
        $.ajax({
            url: '../Ajax/SahiplikListe', // Verileri sağlayan API'nin endpoint'i
            method: 'GET',
            dataType: 'json',
            success: function (data) {
                $('#SahiplikID').empty();
                $('#SahiplikID').append($('<option>', {
                    value: 0, // Verinin değer özelliği
                    text: "Seçiniz" // Verinin görünen metni
                }));
                // Verileri selectbox'a ekle
                $.each(data, function (index, item) {
                    console.log(item);
                    $('#SahiplikID').append($('<option>', {
                        value: item.id, // Verinin değer özelliği
                        text: item.adi // Verinin görünen metni
                    }));


                });
                var SahiplikID = @Json.Serialize(Model.SahiplikID);

                if (SahiplikID !== null) {
                    document.getElementById("SahiplikID").value = SahiplikID;
                }
            },
            error: function (error) {
                console.log('Hata oluştu:', error);
            }
        });
        //grup listele
        $.ajax({
            url: '../Ajax/GrupListe', // Verileri sağlayan API'nin endpoint'i
            method: 'GET',
            dataType: 'json',
            success: function (data) {
                $('#GrupID').empty();
                $('#GrupID').append($('<option>', {
                    value: 0, // Verinin değer özelliği
                    text: "Seçiniz" // Verinin görünen metni
                }));
                // Verileri selectbox'a ekle
                $.each(data, function (index, item) {
                    console.log(item);
                    $('#GrupID').append($('<option>', {
                        value: item.id, // Verinin değer özelliği
                        text: item.adi // Verinin görünen metni
                    }));
                });
                var GrupID = @Json.Serialize(Model.GrupID);

                if (GrupID !== null) {
                    document.getElementById("GrupID").value = @Model.GrupID;

                }
            },
            error: function (error) {
                console.log('Hata oluştu:', error);
            }
        });

