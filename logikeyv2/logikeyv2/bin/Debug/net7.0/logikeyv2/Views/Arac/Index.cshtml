@model List<logikeyv2.Models.AracViewModel>

@{
    ViewData["Title"] = "Araç Ekle";
}
<div class="col-lg-30 col-xxl-12">

    <h2 class="mb-3 lh-sm">Araçlar</h2>
    <a asp-controller="Arac" asp-action="Ekle">Araç Ekle</a>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Plaka</th>
                <th>Tür Adı</th>
                <th>Tip Adı</th>
                <th>Marka Adı</th>
                <th>Model Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Plaka</td>
                    <td>@item.AracTur</td>
                    <td>@item.AracTip</td>
                    <td>@item.Marka</td>
                    <td>@item.Model</td>
                    <td>
                        @if (item.Arac.FirmaID != -2 || item.Arac.FirmaID == ViewBag.FirmaID)
                        {

                            <a asp-controller="Arac" asp-action="Duzenle" asp-route-AracID="@item.Arac.ID">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.Arac.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Plaka</th>
                <th>Tür Adı</th>
                <th>Tip Adı</th>
                <th>Marka Adı</th>
                <th>Model Adı</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
    </table>


</div>