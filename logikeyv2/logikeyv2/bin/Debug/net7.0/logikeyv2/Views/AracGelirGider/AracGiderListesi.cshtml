@using EntityLayer.Concrate;
@model List<AracGelirGider>

@{
    ViewData["Title"] = "AracGider";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Araç Gider</h2>
    <a asp-controller="AracGelirGider" asp-action="AracGiderEkle">Arac Gider Ekle</a>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Arac Plakası</th>
                <th>Gider</th>
                <th>Gider Periyot</th>
                <th>Ek Donanım</th>
                <th>Hasar</th>
                <th>Sürücü Aylığı</th>
                <th>Tutar Periyot</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Arac.Plaka</td>
                    <td>@item.AracGider.Gider</td>
                    <td>@item.AracGider.Gider_Periyot</td>
                    <td>@item.AracGider.Ek_Donanım</td>
                    <td>@item.AracGider.Hasar</td>
                    <td>@item.AracGider.Surucu_Ayligi</td>
                    <td>@item.AracGider.Tutar_Periyot</td>

                    <td>
                        @if (item.Arac.FirmaID != -2 || item.Arac.FirmaID == ViewBag.FirmaID)
                        {

                            <a href="#" onclick="Duzenle(@item.AracGider.aracGider_ID, '@item.AracGider.Gider')">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.AracGider.aracGider_ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Arac Plakası</th>
                <th>Gider</th>
                <th>Gider Periyot</th>
                <th>Ek Donanım</th>
                <th>Hasar</th>
                <th>Sürücü Aylığı</th>
                <th>Tutar Periyot</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </tfoot>
    </table>





</div>

