@using EntityLayer.Concrate;
@model List<Bildirim>

@{
    ViewData["Title"] = "Bildirimler";
}
<div class="col-lg-30 col-xxl-12">
    <h2 class="mb-3 lh-sm">Bildirimler</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }
    <form id="form" action="Bildirim/Ekle" method="post">
        <div class="card shadow-none border my-4" data-component-card="data-component-card">
            <div class="card-header p-4 border-bottom bg-body">
                <div class="row g-3 justify-content-between align-items-center">
                    <div class="col-md-3">
                        <input type="hidden" name="ID" id="ID" value="" />
                        <input class="form-control" id="KategoriAdi" type="text" name="KategoriAdi" placeholder="Kategori Adı Giriniz" />
                    </div>

                    <div class="col-md-3">
                        <input class="form-control" id="KategoriRengi" type="text" name="KategoriRengi" placeholder="Kategori Rengi Giriniz" />
                    </div>

                    <div class="col-md-3">
                        <input class="form-control" id="KategoriSimgesi" type="text" name="KategoriSimgesi" placeholder="Kategori Simgesi Giriniz" />
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Kaydet</button>  <button type="button" onclick="Temizle()" class="btn btn-subtle-warning me-1 mb-1">Temizle</button>
                    </div>

                </div>
            </div>

        </div>
    </form>

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>Kategori Rengi</th>
                <th>Kategori Simgesi</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KategoriAdi</td>
                    <td>@item.KategoriRengi</td>
                    <td>@item.KategoriSimgesi</td>
                    <td>
                        @if (item.FirmaID != -2 || item.FirmaID == ViewBag.FirmaID)
                        {

                            <a href="#" onclick="Duzenle(@item.ID, '@item.KategoriAdi','@item.KategoriRengi','@item.KategoriSimgesi')">
                                <span class="text-body fs-5" data-feather="edit"></span>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Kategori Adı</th>
                <th>Kategori Rengi</th>
                <th>Kategori Simgesi</th>
                <th>
                    İşlemler
                </th>

            </tr>
        </tfoot>
    </table>


    <div class="modal fade" id="sil" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Emin Misiniz?</h5><button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close"><span class="fas fa-times fs-9"></span></button>
                </div>
                <form action="Bildirim/Sil" method="post">
                    <div class="modal-body">

                        <p class="text-body-tertiary lh-lg mb-0">
                            <input type="hidden" name="ID" id="silID" value="" />
                            Bu öğeyi silmek istediğinizden emin misiniz?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="submit">Sil</button>
                        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>


@section Scripts {
    <script>
        function Duzenle(ID, KategoriAdi, KategoriRengi, KategoriSimgesi) {
            document.getElementById("KategoriAdi").value = KategoriAdi;
            document.getElementById("KategoriRengi").value = KategoriRengi;
            document.getElementById("KategoriSimgesi").value = KategoriSimgesi;
            document.getElementById("ID").value = ID;
            document.getElementById("form").setAttribute("action", "Bildirim/Duzenle");

        }
        function Temizle() {
            document.getElementById("KategoriAdi").value = "";
            document.getElementById("KategoriRengi").value = "";
            document.getElementById("KategoriSimgesi").value = "";
            document.getElementById("ID").value = "";
            document.getElementById("form").setAttribute("action", "Bildirim/Ekle");

        }
    </script>
}