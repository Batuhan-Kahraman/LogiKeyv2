@{
    var currentPage = ViewContext.RouteData.Values["Controller"].ToString();
}
<!DOCTYPE html>
<html data-navigation-type="default" data-navbar-horizontal-shape="default" lang="en-US" dir="ltr">

<head>
<meta http-equiv="content-type" content="text/html;charset=utf-8" />
    @await Html.PartialAsync("Head")

  </head>

  <body>

    <main class="main" id="top">
    @await Html.PartialAsync("Navbar")
      <div class="content">
            @if (currentPage != "Home")
            {
                <div class="mb-3 col-6">
                    <table>
                        <tr>
                            <td>
                                <button class="form-control" onclick="close"> Kaydet & Kapat</button>
                            </td>
                            <td>
                                <button class="form-control" onclick="printDiv('printableArea')">Yazdır</button>
                            </td>
                        </tr>
                    </table>
                </div>
            }
            <div id="printableArea">
           @RenderBody()
    </div>
      </div>
     
    </main>



    @await Html.PartialAsync("Script")

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function goBack() {
            window.history.back();
        }
        function close() {
            window.close();
        }
        function printDiv(divId) {
            var printContents = document.getElementById(divId).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
  </body>



