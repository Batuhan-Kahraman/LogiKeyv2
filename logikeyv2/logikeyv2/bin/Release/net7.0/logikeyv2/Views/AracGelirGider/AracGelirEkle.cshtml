@model EntityLayer.Concrate.AracGelir

@{
    ViewData["Title"] = "Arac Gelir Ekle";
}
<div class="col-lg-10 col-xxl-11">

    <h2 class="mb-3 lh-sm">Araç Gelir Ekle</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <div class="border table-responsive scrollbar p-2">
        <form method="post">
            <table class="table table-borderless">

                <tr>

                    <td>Araç Plakası</td>
                    <td>
                        <select class="form-control" asp-for="Arac_ID" id="KullaniciGrup_ID">
                            <option value="0">Seçiniz</option>
                            <option value="1">35 AP 7837</option>
                            <option value="2">35 ZT 7837</option>


                        </select>
                    </td>
                    <td>Araç Gelir</td>
                    <td>
                        <input type="text" class="form-control" asp-for="Gelir" />

                    </td>

                </tr>
                <tr>
                    <td>Saatlik Kiralama Tutarı</td>
                    <td>
                        <input type="text" class="form-control" asp-for="Saatlik_Kiralama_Tutari" />

                    </td>
                    <td>Aylık Kiralama Tutarı</td>
                    <td>
                        <input type="text" class="form-control" asp-for="Aylık_Kiralama_Tutarı" />
                    </td>
                </tr>
                <tr>

                    <td>Tutar Periyot</td>
                    <td>
                        <input type="text" class="form-control" asp-for="Tutar_Periyot" />
                    </td>
                  
                </tr>

            </table>
            <input type="submit" class="btn btn-success w-100" value="Araç Gelirini Kaydet" />
        </form>


    </div>

</div>
