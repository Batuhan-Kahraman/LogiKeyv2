@using EntityLayer.Concrate;
@model List<Cari>

@{
    ViewData["Title"] = "Cariler";
}
<div class="col-lg-10 col-xxl-11">
    <h2 class="mb-3 lh-sm">Cariler</h2>
    @if (TempData["Msg"] != null)
    {
        <div class="d-flex">
            <div class="toast show align-items-center text-white dark__text-gray-1100 border-0 m-3" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true" style="background:@TempData["Bgcolor"]">
                <div class="d-flex">
                    <div>
                        @TempData["Msg"]
                    </div>

                </div>
            </div>
        </div>

    }

    <div class="p-4 code-to-copy">
        <div id="tableExample3" data-list='{"valueNames":["name"],"page":5,"pagination":true}'>
            <div>
                <a asp-controller="Cari" asp-action="Ekle">Cari Ekle</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm fs-9 mb-0">
                    <thead>
                        <tr>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Cari Adı</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">TC NO / Vergi No</th>

                            <th class="sort border-top border-translucent ps-3" data-sort="name">Adresi</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Telefon No</th>
                            <th class="sort border-top border-translucent ps-3" data-sort="name">Yetkili Adı</th>
                            <th class="sort border-top">
                                İşlemler
                            </th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cari_Unvan</td>
                                <td>@item.Cari_TCNO_VergiNo</td>
                                <td>@item.Cari_Adres</td>
                                <td>@item.Cari_CepNo</td>
                                <td>@item.Cari_YetkiliAdi @item.Cari_YetkiliSoyadi</td>
                                <td>
                                    <a asp-controller="Cari" asp-action="CariHareket" asp-route-CariID="@item.Cari_ID" title="Cari Hareketleri">
                                        <span class="text-body fs-5" data-feather="repeat"></span>
                                    </a>
                                    <a href="#" onclick="Duzenle(@item.Cari_ID, '@item.Cari_Unvan')">
                                        <span class="text-body fs-5" data-feather="edit"></span>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#sil" onclick="document.getElementById('silID').value='@item.Firma_ID';"><span class="text-body fs-5" data-feather="trash-2"></span></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


               


            </div>
            <div class="d-flex justify-content-between mt-3">
                <span class="d-none d-sm-inline-block" data-list-info="data-list-info"></span>
                <div class="d-flex">
                    <button class="page-link" data-list-pagination="prev"><span class="fas fa-chevron-left"></span></button>
                    <ul class="mb-0 pagination"></ul><button class="page-link pe-0" data-list-pagination="next"><span class="fas fa-chevron-right"></span></button>
                </div>
            </div>
        </div>
    </div>

</div>
